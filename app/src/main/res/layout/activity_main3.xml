<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >
    <LinearLayout
        android:id="@+id/line2"
        android:visibility="visible"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button2"
            android:onClick="OnClick"

            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="고객" />

        <Button
            android:id="@+id/button3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:onClick="OnClick"
            android:text="직원" />


        <!--<GridView-->
            <!--android:id="@+id/grid_view1"-->
            <!--android:numColumns="3"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"></GridView>-->//그리드로
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/line1"
        android:visibility="invisible"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/button4"
                android:onClick="OnClick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="예약하기"
                />
            <Button
                android:id="@+id/button5"
                android:onClick="OnClick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="예약확인"
                />
            <Button
                android:id="@+id/button6"
                android:onClick="OnClick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="클레임"
                />
            <Button
                android:id="@+id/button7"
                android:onClick="OnClick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="뒤로"
                />
        </LinearLayout>
        <!--<Button-->
            <!--android:id="@+id/button1"-->
            <!--android:onClick="OnClick"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:text="Log in"-->
            <!--/>-->

    </LinearLayout>
    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:hint="이름"
            />
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Check in"

            />
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Check out"

            />
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Phone num"

            />
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Member"

            />
        <Button
            android:id="@+id/button8"
            android:onClick="OnClick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="뒤로"/>

        <Button
            android:id="@+id/button9"
            android:onClick="OnClick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="확인"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/line5"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ListView
        android:id="@+id/list_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        </ListView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line6"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세정보"
            android:textSize="40sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약번호:"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입실날짜:"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입실시간 : 2시부터"
            android:textSize="20sp"/>
        <Button
            android:layout_gravity="center"
            android:id="@+id/button11"
            android:onClick="OnClick"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:text="확인" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line7"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약확인"
            android:textSize="40sp"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="예약번호"

            />
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Phone num"

            />
        <Button
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/button12"
            android:onClick="OnClick"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="확인" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line8"
        android:visibility="invisible"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="클레임"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="내용"

            />
        <Button
            android:layout_gravity="bottom"
            android:id="@+id/button13"
            android:onClick="OnClick"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="확인" />

    </LinearLayout>

</FrameLayout>

